<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/gapMedium">

    <TextView
        android:id="@+id/widget_repo_stars_repo_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary"
        android:padding="@dimen/gapMedium"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="gitsakrios/Gitskarios"
        android:gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/white"
        android:src="@drawable/shadow_widgets" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="@dimen/gapLarge"
            android:src="@drawable/oct_star"
            android:tint="@color/gray_github_medium" />

        <TextView
            android:id="@+id/widget_repo_stars_repo_stars"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:textColor="@color/accent"
            android:textSize="24sp"
            tools:text="50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="@dimen/gapLarge"
            android:src="@drawable/oct_eye"
            android:tint="@color/gray_github_medium" />

        <TextView
            android:id="@+id/widget_repo_stars_repo_watchers"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:textColor="@color/accent"
            android:textSize="24sp"
            tools:text="50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="@dimen/gapLarge"
            android:src="@drawable/oct_fork"
            android:tint="@color/gray_github_medium" />

        <TextView
            android:id="@+id/widget_repo_stars_repo_forks"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:textColor="@color/accent"
            android:textSize="24sp"
            tools:text="50" />
    </LinearLayout>
</LinearLayout>